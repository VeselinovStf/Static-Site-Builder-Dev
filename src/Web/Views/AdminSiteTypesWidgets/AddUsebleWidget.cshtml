@model CreateUsebleWidgetViewModel

<section class="ftco-section services-section bg-light">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 py-1">
                <div class="row">
                    <div class="col-lg-12 py-1">


                        <div class="col-md-12 ftco-animate">

                            <div class="media block-6 services border text-center">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="flaticon-cloud-computing"></span>
                                </div>
                                <div class="mt-3 media-body media-body-2">
                                    <h3 class="heading">Add Useble Widgets</h3>
                                    <p>@Model.SiteTypeName</p>
                                    <input type="hidden" asp-for="@Model.SiteTypeId" />
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">

            <div class="col-lg-12 py-1">
                <div class="row">
                    <div class="col-lg-12 py-1">

                        <h2 class="mb-4 text-center">Useble Widgets</h2>

                    </div>
                    <form method="post" style="display:   inherit;">
                        <div class="row">
                            @for (int i = 0; i < Model.UsebleWidgets.Count; i++)
                            {



                                <input type="hidden" asp-for="@Model.UsebleWidgets[i].WidgetId" />
                                <div class="col-md-3 ftco-animate">

                                    <div class="media block-3 services border text-center">
                                        <div class="icon d-flex align-items-center justify-content-center">
                                            <span class="flaticon-cloud-computing"></span>
                                        </div>
                                        <div class="mt-3 media-body media-body-2">
                                            <h3 class="heading">@Model.UsebleWidgets[i].Name Widget</h3>
                                            <p>Functionality : @Model.UsebleWidgets[i].Functionality</p>
                                            <p>IsFree : @Model.UsebleWidgets[i].IsFree</p>
                                            <p>IsOn : @Model.UsebleWidgets[i].IsOn</p>
                                            <textarea rows="3"> @Model.UsebleWidgets[i].Implementation</textarea>
                                            <p>Price : @Model.UsebleWidgets[i].Price</p>
                                            <p>Version : @Model.UsebleWidgets[i].Version</p>
                                          



                                        </div>
                                          <div class="row text-center">
                            <input type="submit" class="form-submit" value="Create" />
                        </div>


                                    </div>
                                </div>



                            }


                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>

</section>

