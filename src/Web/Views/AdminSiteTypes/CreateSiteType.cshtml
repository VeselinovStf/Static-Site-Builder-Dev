@model CreateSiteTypeTemplateViewModel

<section class="ftco-section services-section bg-light ">
    <section class="ftco-section ftco-counter img" id="section-counter">
        <div class="container">
            <div class="row justify-content-center mb-1">
                <div class="col-md-6 text-center heading-section heading-section-white ftco-animate">
                    <h1>Create Site Type</h1>
                </div>
            </div>
            <div class="col-md-6 offset-3 fadeInUp  ">
                <form method="post" class="container-fluid services">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   
                    <div class="form-group">
                        <label asp-for="Name"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Name" type="text" name="Name" placeholder="Site Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Description" type="text" name="description" placeholder="Site Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"><i class=""></i></label>
                        <input asp-for="Price" type="number" name="Price" placeholder="Price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                   <div class="form-group">
                        <label for="siteType"><i class="zmdi zmdi-email"></i></label>

                       <select class="custom-select"  asp-for="SiteType" asp-items="Model.SiteTypes">
                           <option selected>Select build in type</option>
                       </select>
                   </div>

                    <div class="form-group form-button text-center">
                        <input type="submit" class="form-submit" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}