@model AdminSiteTypeUsebleWidgetsViewModel

<section class="ftco-section services-section bg-light">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 py-1">
                <div class="row">
                    <div class="col-lg-12 py-1">

                       
                        <div class="col-md-12 ftco-animate">

                            <div class="media block-6 services border text-center">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="flaticon-cloud-computing"></span>
                                </div>
                                <div class="mt-3 media-body media-body-2">
                                    <h3 class="heading">@Model.Name</h3>
                                    <p>@Model.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">

            <div class="col-lg-12 py-1">
                <div class="row">
                    <div class="col-lg-12 py-1">

                        <h2 class="mb-4 text-center">Useble Templates</h2>
                        <a asp-action="AddUsebleTemplate" asp-controller="AdminSiteTypeTemplates" asp-route-siteTypeId="@Model.Id" class="btn btn-primary d-block px-1 py-1 mb-1 btn-outline-black">Add Template</a>

                    </div>

                    @foreach (var template in Model.SiteTemplates)
                    {
                        <div class="col-md-3 ftco-animate">

                            <div class="media block-6 services border text-center">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="flaticon-cloud-computing"></span>
                                </div>
                                <div class="mt-3 media-body media-body-2">
                                    <h3 class="heading">@template.Name</h3>
                                    <p>@template.Description</p>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">

            <div class="col-lg-12 py-1">
                <div class="row">
                    <div class="col-lg-12 py-1">

                        <h2 class="mb-4 text-center">Useble Widgets</h2>
                        <a asp-action="AddUsebleWidget" asp-controller="AdminSiteTypesWidgets" asp-route-siteTypeId="@Model.Id" class="btn btn-primary d-block px-1 py-1 mb-1 btn-outline-black">Add Widget</a>

                    </div>

                    @foreach (var widget in Model.UsebleWidgets)
                    {
                        <div class="col-md-3 ftco-animate">

                            <div class="media block-6 services border text-center">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="flaticon-cloud-computing"></span>
                                </div>
                                <div class="mt-3 media-body media-body-2">
                                    <h3 class="heading">@widget.Name</h3>
                                    <p>@widget.Description</p>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>