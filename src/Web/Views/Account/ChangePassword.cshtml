@model PasswordResetViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!-- Sign up form -->
<section class="signup ftco-section">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Change Password</h2>
                <form method="post" class="register-form" id="register-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="UserName"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="UserName" type="text" name="userName" placeholder="Your User Name" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" name="Password" id="pass" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" id="re_pass" placeholder="Repeat your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Change Password" />
                    </div>
                    <input type="hidden" asp-for="@Model.Token" />
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/mainSite/images/signup-image.jpg" alt="sing up image"></figure>
                <a asp-controller="Account" asp-action="Login" class="signup-image-link ">I am already member</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}