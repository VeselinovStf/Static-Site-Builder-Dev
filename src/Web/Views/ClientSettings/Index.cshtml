@model ClientSettingViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="ftco-section services-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 py-5">
                <img src="~/mainSite/images/undraw_laravel_and_vue_59tp.svg" class="img-fluid" alt="">
            </div>
            <div class="col-lg-6 py-5">
                <div class="row">
                    <div class="col-md-6 ftco-animate">
                        <a asp-controller="AccountManage" asp-action="ChangeAccountInformation" asp-route-userId="@Model.ClientId">
                            <div class="media block-6 services border text-center">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="flaticon-cloud-computing"></span>
                                </div>
                                <div class="mt-3 media-body media-body-2">
                                    <h3 class="heading">Account Settings</h3>
                                    <p>Change Account Information</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>