@{
}
<section class="signup ftco-section">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Edit Post</h2>
                <form method="post" class="register-form" id="register-form">

                    <div class="form-group">
                        <label for="Header"><i class="zmdi zmdi-email"></i></label>
                        @Html.DisplayFor(model => model.Header)
                    </div>
                    <div class="form-group">
                        <label for="image"><i class="zmdi zmdi-email"></i></label>
                        @Html.DisplayFor(model => model.Image)
                    </div>
                    <div class="form-group">
                        <label asp-for="Content"><i class="zmdi zmdi-lock-outline"></i></label>
                        @Html.DisplayFor(model => model.Content)
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Delete" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>