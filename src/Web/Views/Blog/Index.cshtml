@model IEnumerable<PublicPostViewModel>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @if (Model.Count() == 0)
            {
                <h1>Blog is still empty.</h1>
            }
            else
            {
                @foreach (var post in Model)
                {
                    <div class="col-md-4 ftco-animate">
                        <div class="blog-entry">
                            <a href="blog-single.html" class="block-20" style="background-image: url('/mainSite/images/image_1.jpg');">
                            </a>
                            <div class="text d-flex py-4">
                                <div class="meta mb-3">
                                    <div><a href="#">@post.PubDate</a></div>
                                    <div><a href="#">@post.AuthorName</a></div>
                                </div>
                                <div class="desc pl-3">
                                    <h3 class="heading"><a href="#">@post.Header</a></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>
                                <li><a href="#">&lt;</a></li>
                                <li class="active"><span>1</span></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#">&gt;</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>