@model ClientPostViewModel

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ftco-animate">
                <h2 class="mb-3">@Model.Header</h2>

                <p>
                    <img src="~/mainSIte/images/image_6.jpg" alt="" class="img-fluid">
                </p>
                <p>@Model.Content</p>
                <div class="about-author d-flex p-5 bg-light">
                    <div class="bio mr-5">
                        <img src="~/mainSite/images/person_1.jpg" alt="Image placeholder" class="img-fluid mb-4 rounded-circle">
                    </div>
                    <div class="desc align-self-md-center">
                        <h3>@Model.AuthorName</h3>
                        <p>ia delectus aut, sunt placeat nam vero culpa sapiente consectetur similique, inventore eos fugit cupiditate numquam!</p>
                    </div>
                </div>
                <div class="pt-5 mt-5">
                    @if (Model.Comments != null)
                    {
                        <h3 class="mb-5 font-weight-bold">@Model.Comments.Count() Comments</h3>
                        <ul class="comment-list">
                            @foreach (var comment in Model.Comments)
                            {
                                <li class="comment">
                                    @*<div class="vcard bio">
                                            <img src="images/person_1.jpg" alt="Image placeholder">
                                        </div>*@
                                    <div class="comment-body">
                                        <h3>@comment.AuthorName</h3>
                                        <div class="meta">@comment.PubDate</div>
                                        <p>@comment.Content</p>
                                        @*<p><a href="#" class="reply">Reply</a></p>*@
                                    </div>
                                </li>
                            }
                        </ul>
                    }

                    <!-- END comment-list -->
                    @await Component.InvokeAsync("CreateBlogPostComment", new { postId = Model.PostId })
                </div>
            </div>
        </div>
    </div>
</section> <!-- .section -->