@model ClientWalletViewModel

<section class="ftco-section services-section bg-light">
    <section class="ftco-section ftco-counter img" id="section-counter">
        <div class="container">
            <div class="row justify-content-center mb-1">
                <div class="col-md-5 text-center heading-section heading-section-white ftco-animate">
                    <h1>Wallet</h1>
                     <p>SST$ : @Model.AvailibleTokens</p>
                </div>
            </div>
        </div>
    </section>
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-12 ">
               


                    <div class="col-md-12 ftco-animate fadeInUp ftco-animated">
                        <form method="post">                           
                            <input type="hidden" asp-for="@Model.WalletId" />
                             <div class="media block-5 services border text-center">
                            <div class="icon d-flex align-items-center justify-content-center">
                                <span class="flaticon-cloud"></span>
                            </div>
                            <div class="mt-3 media-body media-body-2">
                                <h3 class="heading">Add SST$ TOKEN</h3>

                            </div>
                                 <div class="center-block display-flex-center">
                                <button type="submit"  class="btn btn-primary d-block px-3 py-3 mb-4 btn-outline-white">Add</button>
                            </div>
                        </div>
                            
                        </form>
                       

                    </div>
                </div>
            </div>
        </div>
    
    
</section>