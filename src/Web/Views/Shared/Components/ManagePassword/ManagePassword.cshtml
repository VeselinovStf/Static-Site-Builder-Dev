@{
}
<div class="col-md-12 ftco-animate fadeInUp ftco-animated">
    <div class="media block-12 services border text-center">

        <div class="icon d-flex align-items-center justify-content-center">
            <span class="flaticon-database"></span>
        </div>
        <div class="mt-12 media-body media-body-2">
            <h3 class="heading">Change Password</h3>
            <p>Update your password</p>
        </div>
        <hr />
        <div class="row">
            <form asp-controller="AccountManage" asp-action="UpdatePassword" method="post" class="register-form" id="register-form">
                <input type="hidden" asp-for="@Model.UserId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="CurrentPassword"><i class="zmdi zmdi-email"></i></label>
                    <input asp-for="CurrentPassword" type="text" name="currentPassword" placeholder="Current Password" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password"><i class="zmdi zmdi-email"></i></label>
                    <input asp-for="Password" type="text" name="password" placeholder="New Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="ConfirmPassword"><i class="zmdi zmdi-email"></i></label>
                    <input asp-for="ConfirmPassword" type="text" name="confirmPassword" placeholder="Confirm New Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group form-button">
                    <input type="submit" name="signup" id="signup" class="form-submit" value="Update" />
                </div>
            </form>
        </div>
    </div>
</div>