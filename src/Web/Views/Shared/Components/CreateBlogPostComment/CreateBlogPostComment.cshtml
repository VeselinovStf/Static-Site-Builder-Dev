@model CreateBlogPostCommentViewModel
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Leave a comment</h3>
    <form method="post" asp-controller="Blog" asp-action="PostComment" class="p-5 bg-light">
        <input type="hidden" asp-for="@Model.PostId" />
        <input type="hidden" asp-for="@Model.AuthorId" />
        <input type="hidden" asp-for="@Model.AuthorName" />
        <div class="form-group">

            <textarea asp-for="Content" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
        </div>
    </form>
</div>