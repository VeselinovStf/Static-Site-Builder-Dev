@model AccountManageUserInformationViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="col-md-12 ftco-animate fadeInUp ftco-animated">
    <div class="media block-12 services border text-center">

        <div class="icon d-flex align-items-center justify-content-center">
            <span class="flaticon-database"></span>
        </div>
        <div class="mt-12 media-body media-body-2">
            <h3 class="heading">User Information</h3>
            <p>Update your personal information</p>
        </div>
        <hr />
        <div class="row">
            <form asp-controller="AccountManage" asp-action="UpdateUserInformation" method="post" class="register-form" id="register-form">
                <input type="hidden" asp-for="@Model.UserId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="UserName"><i class="zmdi zmdi-email"></i></label>
                    <input asp-for="UserName" type="text" name="userName" placeholder="Your User Name" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="email"><i class="zmdi zmdi-email"></i></label>
                    <input asp-for="Email" type="email" name="email" id="email" placeholder="Your Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group form-button">
                    <input type="submit" name="signup" id="signup" class="form-submit" value="Update" />
                </div>
            </form>
        </div>
    </div>
</div>