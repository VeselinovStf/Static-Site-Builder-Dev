@model AccountManageClientInformationViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="ftco-section services-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 py-5">
                <div class="row">
                    <div class="col-md-6 ftco-animate fadeInUp ftco-animated">
                        <a onclick="openCity(event, 'UserInformation')" id="defaultOpen">
                            <div class="media block-6 services border text-center">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="flaticon-cloud-computing"></span>
                                </div>
                                <div class="mt-3 media-body media-body-2">
                                    <h3 class="heading">User Information</h3>
                                    <p>Change your basic information</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 ftco-animate fadeInUp ftco-animated">
                        <a onclick="openCity(event, 'Password')">
                            <div class="media block-6 services border text-center">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="flaticon-cloud"></span>
                                </div>
                                <div class="mt-3 media-body media-body-2">
                                    <h3 class="heading">Change Password</h3>
                                    <p>Change your current password</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6 ftco-animate fadeInUp ftco-animated">
                        <div class="media block-6 services border text-center">
                            <a onclick="openCity(event, 'Delete')">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="flaticon-server"></span>
                                </div>
                                <div class="mt-3 media-body media-body-2">
                                    <h3 class="heading">Delete your account</h3>
                                    <p>Delete your account</p>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 ftco-animate fadeInUp ftco-animated">
                        <div class="media block-6 services border text-center">
                            <a onclick="openCity(event, 'Payments')">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="flaticon-database"></span>
                                </div>
                                <div class="mt-3 media-body media-body-2">
                                    <h3 class="heading">Payment</h3>
                                    <p>Look at ypur payments</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 py-5">
                <div class="row">
                    <div id="UserInformation" class="tabcontent">

                        @await Component.InvokeAsync("ManageUserInformation", new { model = Model.UserInformation })
                    </div>

                    <div id="Password" class="tabcontent">

                        @await Component.InvokeAsync("ManagePassword", new { model = Model.Password })
                    </div>

                    <div id="Delete" class="tabcontent">

                        @await Component.InvokeAsync("ManageDelete", new { model = Model.Delete })
                    </div>

                    <div id="Payments" class="tabcontent">

                        @await Component.InvokeAsync("ManagePayments", new { model = Model.Payments })
                    </div>
                </div>
            </div>
        </div>
</section>
<script>
    function openCity(evt, cityName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(cityName).style.display = "block";
        evt.currentTarget.className += " active";
    }

    // Get the element with id="defaultOpen" and click on it
    document.getElementById("defaultOpen").click();
</script>