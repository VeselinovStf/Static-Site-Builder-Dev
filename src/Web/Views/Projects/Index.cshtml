@model ProjectsListViewModel
@{

}
<section class="ftco-section services-section bg-light">
    <section class="ftco-section ftco-counter img" id="section-counter">
        <div class="container">
           
            <div class="row justify-content-center mb-1">
                <div class="col-md-3 text-center heading-section heading-section-white ftco-animate">
                    <h1>Projects</h1>

                    <a asp-action="SelectSiteType" asp-controller="SiteType" asp-route-clientId="@Model.ClientId" class="btn btn-primary d-block px-3 py-3 mb-4 btn-outline-white">Create</a>
                </div>
            </div>
        </div>
    </section>
</section>
<section>
    <div class="container">
        <div class="row">
            @foreach (var proj in Model.Projects)
            {

                <div class="col-md-4 ftco-animate">
                    <a asp-controller="SiteType" asp-action="Site" asp-route-clientId="@Model.ClientId" asp-route-siteTypeId="@proj.Id">
                        <div class="media block-6 services border text-center">
                            <p class="block-20" style="background-image: url('/mainSite/images/image_1.jpg');">
                            </p>

                            <div class="mt-3 media-body media-body-2">
                                <div><p>Site Name: @proj.Name</p></div>
                                <div><p>Description: @proj.Description</p></div>
                                <div><p>Site Type: @proj.ProjectType</p></div>
                                <div><p>Items: @proj.ItemsCount</p></div>
                                <div><p>Created: @proj.CreatedOn</p></div>
                                <div><p>Last Modifications: @proj.ModifiedOn</p></div>
                            </div>
                        </div>
                    </a>
                </div>

            }
        </div>
    </div>
</section>